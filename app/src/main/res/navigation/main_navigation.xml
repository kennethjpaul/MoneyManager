<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.kinetx.moneymanager.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_addExpenseFragment"
            app:destination="@id/addExpenseFragment" />
        <action
            android:id="@+id/action_mainFragment_to_addIncomeFragment"
            app:destination="@id/addIncomeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_addTransferFragment"
            app:destination="@id/addTransferFragment" />
    </fragment>
    <fragment
        android:id="@+id/addExpenseFragment"
        android:name="com.kinetx.moneymanager.AddExpenseFragment"
        android:label="AddExpenseFragment" >
        <action
            android:id="@+id/action_addExpenseFragment_to_selectCategoryFragment"
            app:destination="@id/selectCategoryFragment" />
        <argument
            android:name="var_type"
            app:argType="string" />
        <argument
            android:name="var_bg"
            app:argType="integer" />
        <argument
            android:name="var_color"
            app:argType="string" />
        <argument
            android:name="var_id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/addIncomeFragment"
        android:name="com.kinetx.moneymanager.AddIncomeFragment"
        android:label="AddIncomeFragment" >
        <action
            android:id="@+id/action_addIncomeFragment_to_selectCategoryFragment"
            app:destination="@id/selectCategoryFragment" />
        <argument
            android:name="var_type"
            app:argType="string" />
        <argument
            android:name="var_bg"
            app:argType="integer" />
        <argument
            android:name="var_color"
            app:argType="string" />
        <argument
            android:name="var_id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/addTransferFragment"
        android:name="com.kinetx.moneymanager.AddTransferFragment"
        android:label="AddTransferFragment" >
        <action
            android:id="@+id/action_addTransferFragment_to_selectCategoryFragment"
            app:destination="@id/selectCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectCategoryFragment"
        android:name="com.kinetx.moneymanager.SelectCategoryFragment"
        android:label="SelectCategoryFragment" >
        <argument
            android:name="transactionType"
            app:argType="string" />
        <argument
            android:name="actionType"
            app:argType="string" />
        <action
            android:id="@+id/action_selectCategoryFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.kinetx.moneymanager.CategoryFragment"
        android:label="CategoryFragment" >
        <argument
            android:name="isEdit"
            app:argType="boolean" />
        <argument
            android:name="categoryID"
            app:argType="long" />
        <argument
            android:name="categoryName"
            app:argType="string" />
        <argument android:name="categoryType"
            app:argType="string" />
        <argument android:name="iconResource"
            app:argType="integer" />
        <argument
            android:name="colorResource"
            app:argType="integer" />
        <argument
            android:name="category"
            app:argType="string" />
        <action
            android:id="@+id/action_categoryFragment_to_selectColorIconFragment"
            app:destination="@id/selectColorIconFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectColorIconFragment"
        android:name="com.kinetx.moneymanager.SelectColorIconFragment"
        android:label="SelectColorIconFragment" >
        <argument
            android:name="colorIconType"
            app:argType="string" />
    </fragment>
</navigation>