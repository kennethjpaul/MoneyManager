<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/air_force_blue"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transaction_list_category_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/transaction_list_year"
        app:layout_constraintTop_toTopOf="@+id/transaction_list_day"
        tools:text="Groceries" />

    <TextView
        android:id="@+id/transaction_list_category_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_category_two"
        app:layout_constraintEnd_toEndOf="@+id/transaction_list_amount"
        app:layout_constraintTop_toTopOf="@+id/transaction_list_category_two"
        tools:text="Main" />


    <TextView
        android:id="@+id/transaction_list_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_year"
        app:layout_constraintStart_toStartOf="@+id/transaction_list_category_two"
        app:layout_constraintTop_toBottomOf="@+id/transaction_list_category_two"
        tools:text="Denner" />

    <TextView
        android:id="@+id/transaction_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_comment"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="357.23" />

    <TextView
        android:id="@+id/transaction_list_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="26" />

    <TextView
        android:id="@+id/transaction_list_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/transaction_list_day"
        app:layout_constraintTop_toTopOf="@+id/transaction_list_day"
        android:layout_marginTop="10dp"
        tools:text="Apr" />

    <TextView
        android:id="@+id/transaction_list_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/transaction_list_day"
        app:layout_constraintTop_toBottomOf="@+id/transaction_list_month"
        tools:text="2023" />

</androidx.constraintlayout.widget.ConstraintLayout>