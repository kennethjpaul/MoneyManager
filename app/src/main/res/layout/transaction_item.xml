<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/air_force_blue"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transaction_list_category_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Groceries"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transaction_list_category_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        tools:text="Main"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/transaction_list_category_two"
        app:layout_constraintTop_toBottomOf="@+id/transaction_list_category_two" />

    <TextView
        android:id="@+id/transaction_list_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Denner"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/transaction_list_category_one"
        app:layout_constraintTop_toBottomOf="@+id/transaction_list_category_one" />


    <TextView
        android:id="@+id/transaction_list_date"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_category_two"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="17-03-2023" />

    <TextView
        android:id="@+id/transaction_list_amount"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_comment"
        app:layout_constraintEnd_toEndOf="@+id/transaction_list_date"
        tools:text="357.23" />

</androidx.constraintlayout.widget.ConstraintLayout>