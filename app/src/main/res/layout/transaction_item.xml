<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:background="@drawable/border"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:padding="10dp">


    <TextView
        android:id="@+id/transaction_list_category_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_bias="0"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/transaction_list_comment"
        app:layout_constraintEnd_toStartOf="@+id/transaction_item_guide_2"
        app:layout_constraintStart_toStartOf="@+id/transaction_item_guide_1"
        tools:text="Groceries" />

    <TextView
        android:id="@+id/transaction_list_category_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toTopOf="@+id/transaction_list_amount"
        app:layout_constraintStart_toStartOf="@+id/transaction_item_guide_2"
        tools:text="Main" />

    <TextView
        android:id="@+id/transaction_list_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_bias="0"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_year"
        app:layout_constraintEnd_toStartOf="@+id/transaction_item_guide_2"
        app:layout_constraintStart_toStartOf="@+id/transaction_item_guide_1"
        tools:text="Denner" />

    <TextView
        android:id="@+id/transaction_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_comment"
        app:layout_constraintStart_toStartOf="@+id/transaction_item_guide_2"
        tools:text="357.23" />

    <TextView
        android:id="@+id/transaction_list_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="26" />

    <TextView
        android:id="@+id/transaction_list_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_day"
        app:layout_constraintStart_toEndOf="@+id/transaction_list_day"
        tools:text="Apr" />

    <TextView
        android:id="@+id/transaction_list_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_month"
        app:layout_constraintStart_toEndOf="@+id/transaction_list_month"
        tools:text="2023" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transaction_item_guide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="70dp" />

    <TextView
        android:id="@+id/transaction_list_type"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transaction_item_guide_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="218dp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>