<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainFragment">
    <data>
        <variable
            name="mainViewModel"
            type="com.kinetx.moneymanager.MainViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/main_add_expense_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/add_transactions"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/main_add_expense_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/payment"
            android:scaleType="fitXY"
            android:background="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_add_expense_text" />

        <TextView
            android:id="@+id/t10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/income"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/main_add_income_btn"
            app:layout_constraintStart_toStartOf="@+id/main_add_income_btn"
            app:layout_constraintTop_toBottomOf="@+id/main_add_income_btn" />

        <ImageButton
            android:id="@+id/main_add_income_btn"
            android:src="@drawable/deposit"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="30dp"
            android:scaleType="fitXY"
            android:background="@color/air_force_blue"
            app:layout_constraintBottom_toBottomOf="@+id/main_add_expense_btn"
            app:layout_constraintEnd_toStartOf="@+id/main_add_expense_btn" />

        <TextView
            android:id="@+id/t11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/main_add_expense_btn"
            app:layout_constraintStart_toStartOf="@+id/main_add_expense_btn"
            app:layout_constraintTop_toBottomOf="@+id/main_add_expense_btn" />

        <ImageButton
            android:id="@+id/main_add_transfer_btn"
            android:layout_width="90dp"
            android:src="@drawable/moneytransfer"
            android:layout_height="90dp"
            android:background="@color/android_green"
            android:layout_marginStart="30dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/main_add_expense_btn"
            app:layout_constraintStart_toEndOf="@+id/main_add_expense_btn" />

        <TextView
            android:id="@+id/t12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/main_add_transfer_btn"
            app:layout_constraintStart_toStartOf="@+id/main_add_transfer_btn"
            app:layout_constraintTop_toBottomOf="@+id/main_add_transfer_btn" />
        <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="80dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_add_expense_btn" />

        <TextView
            android:id="@+id/main_this_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/this_month"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />


        <com.kinetx.moneymanager.customview.DialView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/main_dial_view"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_this_month_text"
            app:expenses="1000"
            app:balance="-500"
            app:currency="CHF"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>