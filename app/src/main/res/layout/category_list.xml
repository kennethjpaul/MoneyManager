<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@color/DarkBlue"
    android:layout_width="250dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/category_list_image_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        android:src="@drawable/help"/>

    <TextView
        android:id="@+id/category_list_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        tools:text="Groceries"
        app:layout_constraintBottom_toBottomOf="@+id/category_list_image_button"
        app:layout_constraintStart_toEndOf="@+id/category_list_image_button" />

    <TextView
        android:id="@+id/category_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11000"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/category_list_category_name"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>