<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_marginBottom="10dp"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        style="@style/material_card"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/material_card_constraint">

            <ImageView
                android:id="@+id/category_budget_image_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/black"
                android:padding="8dp"
                android:src="@drawable/help"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/category_budget_category_name"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/category_budget_image_button"
                app:layout_constraintTop_toTopOf="@+id/category_budget_image_button"
                tools:text="Groceries" />

            <TextView
                android:id="@+id/category_budget_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/category_budget_category_name"
                app:layout_constraintEnd_toStartOf="@+id/category_budget_budget"
                app:layout_constraintTop_toTopOf="@+id/category_budget_category_name"
                tools:text="11000" />

            <TextView
                android:id="@+id/category_budget_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/category_budget_category_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/category_budget_category_name" />

            <ProgressBar
                android:id="@+id/category_budget_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/category_budget_budget"
                app:layout_constraintStart_toStartOf="@+id/category_budget_category_name"
                app:layout_constraintTop_toBottomOf="@+id/category_budget_category_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>