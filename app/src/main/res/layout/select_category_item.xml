<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="130dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/select_category_item_card"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/select_category_item_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/select_category_item_text"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/select_category_item_text"
                android:layout_width="80dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="@string/empty_string_placeholder"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/select_category_item_image"
                app:layout_constraintStart_toStartOf="@+id/select_category_item_image"
                app:layout_constraintTop_toBottomOf="@+id/select_category_item_image" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>